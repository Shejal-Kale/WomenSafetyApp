<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="start"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/custom_toolbar"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FrameConatiner"
        android:layout_above="@+id/bottomNavigation" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarCustom"
                app:title="Her Safety"
                app:titleTextColor="@color/cardview_light_background"
                android:background="@color/colorPrimaryDark" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back2"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <GridLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:columnOrderPreserved="false"
                android:padding="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#E91E63">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical" />

                    <ImageView
                        android:layout_height="200dp"
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:id="@+id/callPolice"
                        android:src="@drawable/e"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Call Police"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/cardview_light_background"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#3F51B5">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical" />
                    <ImageView
                        android:layout_height="140dp"
                        android:layout_width="160dp"
                        android:layout_gravity="center"
                        android:id="@+id/message"
                        android:src="@drawable/b"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Message"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/cardview_light_background"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#A37082">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical" />
                    <ImageView
                        android:layout_height="120dp"
                        android:layout_width="170dp"
                        android:layout_gravity="center"
                        android:id="@+id/emergency"
                        android:src="@drawable/c"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Emergency"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/cardview_light_background"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#5C8DB5">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical" />
                    <ImageView
                        android:layout_height="120dp"
                        android:layout_width="170dp"
                        android:id="@+id/nearBy"
                        android:layout_gravity="center"
                        android:src="@drawable/a"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Nearby Police"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/cardview_light_background"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#E91E63">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical" />
                    <ImageView
                        android:layout_height="120dp"
                        android:layout_width="170dp"
                        android:id="@+id/defence"
                        android:layout_gravity="center"
                        android:src="@drawable/defence"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Defence"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/cardview_light_background"
                        />
                </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#3F51B5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical" />
                <ImageView
                    android:layout_height="120dp"
                    android:layout_width="170dp"
                    android:id="@+id/escape"
                    android:layout_gravity="center"
                    android:src="@drawable/escape"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Escape"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/cardview_light_background"
                    />
            </androidx.cardview.widget.CardView>
        </GridLayout>
            <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/back4">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#96007D"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/My_title_toolbar"
                    android:text="@string/app_name"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:gravity="center_vertical"/>
            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenu"
        app:menu="@menu/iconmenu"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>